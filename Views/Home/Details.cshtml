@model Post

 <section class="py-4 detay_">
      <div class="container">
        <div class="row">
          <aside class="col-lg-5">
            <div class="gallery-wrap">
              <div class="img-big-wrap img-thumbnail">
                <a
                  href="~/img/@Model.Image"
                  data-type="image"
                  data-fslightbox="mygallery"
                >
                  <img src="~/img/@Model.Image" alt="" />
                </a>
              </div>
              <div class="thumbs-wrap">
                <a
                  href="~/img/@Model.Image"
                  data-type="image"
                  data-fslightbox="mygallery"
                >
                  <img width="60" height="60" src="~/img/@Model.Image" alt="" />
                </a>
                <a
                  href="~/img/@Model.Image"
                  data-type="image"
                  data-fslightbox="mygallery"
                >
                  <img width="60" height="60" src="~/img/@Model.Image" alt="" />
                </a>
                <a
                  href="~/img/@Model.Image"
                  data-type="image"
                  data-fslightbox="mygallery"
                >
                  <img width="60" height="60" src="~/img/@Model.Image" alt="" />
                </a>
                <a
                  href="~/img/@Model.Image"
                  data-type="image"
                  data-fslightbox="mygallery"
                >
                  <img width="60" height="60" src="~/img/@Model.Image" alt="" />
                </a>
                <a
                  href="~/img/@Model.Image"
                  data-type="image"
                  data-fslightbox="mygallery"
                >
                  <img width="60" height="60" src="~/img/@Model.Image" alt="" />
                </a>
              </div>
            </div>
          </aside>
          <main class="col-lg-7">
            <article>
              <h4 class="title text-dark det_h4">
                @Model.Title @Model.Description
              </h4>
              <div class="rating-wrap">
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star checked"></span>
                <span class="fa fa-star"></span>
              </div>
              <p class="text-success">  @(@Model.IsActive ? "Stokta" : "Stokta Değil")</p>
              <div class="mb-3">
                <b class="price h5">@Model.Price TL</b>
              </div>
              <div class="product-desc">
                <p>
                  Lorem ipsum dolor sit amet consectetur adipisicing elit. At
                  illum vitae dolorem sit. Aperiam non dolorem praesentium
                  accusamus reiciendis voluptatum pariatur? Ipsum deserunt
                  dolores maiores iste iure. Voluptas, odio temporibus?
                </p>
              </div>
              <dl class="row bottom-bottom">
                <dt class="col-3">Renk:</dt>
                <dd class="col-9">Yıldız Işığı</dd>
                <dt class="col-3">Bağlantı Özellikleri:</dt>
                <dd class="col-9">GPS</dd>
              </dl>
              <div class="row mb-4">
                <div class="col-md-4 col-6 mb-2">
                  <label class="form-label">Hafıza</label>
                  <select class="form-select">
                    <option value="">128 gb</option>
                    <option value="">256 gb</option>
                  </select>
                </div>
              </div>
              <div class="buttons">
                  <form asp-page="/Cart" method="post">
                      <input name="PostId" type="hidden" asp-for="@Model.PostId">
                      <button class="btn btn-warning"><i class="fa fa-shopping-cart me-1"></i>Sepete Ekle</button>
                      </form>
               
              </div>
            </article>
          </main>
        </div>
      </div>
    </section>

    <section class="bg-light" id="comments">
  <div class="container">
    <div class="row py-4">
      <div class="col-lg-12">
        <div class="card mb-4">
          <div class="card-body">
            <h5 class="card-title">Yorumlar</h5>
             <h4>@Model.Comments.Count() adet yorum</h4>
            <hr />

            @foreach(var comment in Model.Comments) {

            <blockquote class="border-bottom">
              <div class="float-end"></div>
              <div class="content">
                <img
                  src="~/img/@comment.User.ImageFile"
                  class="rounded-circle"
                  alt=""
                />
                <div class="text">
                  <h6 class="mb-0">@comment.User.UserName</h6>
                  <small>@comment.PublishedOn.ToString("G")</small>
                </div>
              </div>
              <div class="mt-3">
                <p>@comment.Text</p>
              </div>
            </blockquote>
            }
          </div>
        </div>
        <div class="card">
          <div class="card-body">
            <h5 class="mb-3">Yorum Yap</h5>
            @if(User.Identity!.IsAuthenticated) {
            <form asp-action="AddComment" method="Post">
              <input type="hidden" name="PostId" value="@Model.PostId" />
              <input type="hidden" name="UserId" value="@Model.UserId" />
              <div class="mb-3">
                <textarea
                  class="form-control"
                  placeholder="Yorumunuz"
                ></textarea>
              </div>
              <div class="row">
                <div class="col-lg-3">
                  <button type="submit" class="btn btn-warning">Kaydet</button>
                </div>
              </div>
            </form>
            }else{
            <p>
              Yorum yapmak için
              <a class="text-danger" href="/Account/Login">Giriş</a> yap.
            </p>
            }
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
